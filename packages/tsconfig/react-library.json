{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Library",
  "extends": "./base.json",
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "moduleResolution": "bundler",
    "lib": ["ES2015", "DOM"],
    "module": "ES2022",
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
