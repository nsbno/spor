{
  "include": [".", "tmp"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "./dist",
    "rootDirs": ["bin", "tmp"],
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist",
    "types": ["react", "react-dom", "./dist/types"], // Include the path to your types
    "paths": {
      "@vygruppen/spor-icon-react": ["./dist/types.d.ts"]
    }
  }
}