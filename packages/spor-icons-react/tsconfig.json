{
  "extends": "tsconfig/base.json",
  "include": [".", "tmp"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "rootDirs": ["bin", "tmp"],
    "jsx": "react",
    "moduleResolution": "node",
    "lib": ["ES2015", "DOM"],
    "module": "ESNext",
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
