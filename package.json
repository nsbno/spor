{
  "name": "@vygruppen/spor-monorepo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "prebuild": "rimraf packages/*/dist --glob",
    "build": "turbo run build",
    "test": "turbo run test --parallel",
    "dev": "turbo run dev --no-cache --parallel --filter=@vygruppen/spor*-react --filter=@vygruppen/docs --filter=@vygruppen/studio",
    "postinstall": "patch-package",
    "prerelease": "pnpm build",
    "release": "turbo run build && changeset publish",
    "format:fix": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:validate": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "typegen": "npx @chakra-ui/cli typegen packages/spor-react/src/theme/index.ts",
    "typegen:watch": "npx @chakra-ui/cli typegen packages/spor-react/src/theme/index.ts --watch",
    "typegen:strict": "npx @chakra-ui/cli typegen packages/spor-react/src/theme/index.ts --strict"
  },
  "dependencies": {
    "@changesets/cli": "^2.27.5",
    "patch-package": "^8.0.0",
    "prettier": "^3.3.1",
    "react-icons": "^5.4.0",
    "rimraf": "^5.0.7",
    "turbo": "^2.4.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prettier": {},
  "packageManager": "pnpm@10.4.1"
}
