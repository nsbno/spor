{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Library",
  "extends": "./base.json",
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": ["ES2015", "DOM"],
    "module": "ESNext",
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react"
  }
}
